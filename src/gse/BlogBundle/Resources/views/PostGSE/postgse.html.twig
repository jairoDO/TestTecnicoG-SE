{# total items count #}
<div class="count">
    {{ pagination.getTotalItemCount }}
</div>
<table>
<tr>
{{ form(form) }}
{# table body #}
    <tr>
        <th> post titulo </th>
        <th> tags asociados</th>
    <tr>
{% for post in pagination %}

<tr {% if loop.index is odd %}class="color"{% endif %}>
    <td>{{ post.titulo }}</td>
    <td >
        {% for tag in post.tags %}
            {{ tag.nombre }} <b>|</b>
        {% endfor %}

    </td>
</tr>
{% endfor %}
</table>
{# display navigation #}
<div class="navigation">
    {{ knp_pagination_render(pagination) }}
</div>